<div class="container container-fluid">

		<div class="col-md-8 home_search_form_text">
			<h2 class="well well-sm">enter your trip dates</h2>
			<%=form_for "home", :html => { :class=> "form-horizontal"} do |f|%>
			<%= f.label "from", :class => "search_form_text label label-success"%>
			<div class="form-group">
				<div class="col-lg-10">
					<%= f.text_field :start_date  %>
				</div>
			</div>
			<%= f.label "till", :class => "search_form_text label label-success"%>
			<div class="form-group">

				<div class="col-lg-10">
					<%= f.text_field :end_date %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-lg-10">
					<%= f.submit "Go!", :class => "btn btn-primary"%>
				</div>
			</div>
			<%end%>
		</div>
		
		<div class="col-md-4">
			<%@snippets.each do |snippet|%>
			<div class="well well-sm snippet_div">
				<p> <%= snippet.title%> </p>
				<a href="<%= snippet.link%>" class="btn btn-success btn-xs">visit</a>
			</div>
			
			<%end%>
		</div>
	</div>

<script>
	$(function() {
		$("#home_start_date").datepicker();
		$("#home_end_date").datepicker();
	}); 
</script>