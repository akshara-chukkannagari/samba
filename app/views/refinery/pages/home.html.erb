<div class="container container-fluid home_search_form_text">
	<h2 class="badge badge-info">enter your trip dates</h2>
	<%=form_for "home", :html => { :class=> "form-horizontal"} do |f|%>
	<%= f.label "from", :class => "search_form_text badge"%>
	<div class="form-group">
		<div class="col-lg-10">
			<%= f.text_field :start_date  %>
		</div>
	</div>
	<%= f.label "till", :class => "search_form_text badge"%>
	<div class="form-group">

		<div class="col-lg-10">
			<%= f.text_field :end_date %>
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-10">
			<%= f.submit "Go!", :class => "btn btn-primary"%>
		</div>
	</div>
	<%end%>
</div>
<script>
	$(function() {
		$("#home_start_date").datepicker();
		$("#home_end_date").datepicker();
	}); 
</script>