<%= form_for [refinery, :hotels_admin, @hotel] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @hotel,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "hotels/hotel" -%>
  </div>

  <div class='field'>
    <%= f.label :phone_number -%>
    <%= f.text_field :phone_number -%>
  </div>

  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>

  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address -%>
  </div>

  <div class='field'>
    <%= f.label :teaser -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :teaser_id,
               :image => @hotel.teaser,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.hotels.admin.hotels.hotel'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @hotel.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
