<%= form_for [refinery, :accomodations_admin, @accomodation_type] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @accomodation_type,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.accomodation_types.admin.accomodation_types.accomodation_type'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @accomodation_type.name) -%>
<% end -%>
