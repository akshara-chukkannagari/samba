<div class="hero-unit">
	<% content_for :body_content_title do %>
	<h1> <%= @accomodation.name %> </h1>
	<% end %>
</div>

<div class="panel panel-body">

	<% content_for :body do %>
	<div>
		<h4><p class="label label-info"></p> Name</h4>
		<p>
			<%= raw @accomodation.name %>
		</p>
	</div>
	<div>
		<h4>Details</h4>
		<p>
			<%= raw @accomodation.details %>
		</p>
	</div>
	<div>
		<h4>Teaser Image</h4>
		<p>
			<%= image_fu @accomodation.teaser_image, nil %>
		</p>
	</div>
	<div>
		<h4>Phone Number</h4>
		<p>
			<%= raw @accomodation.phone_number %>
		</p>
	</div>
	<div>
		<h4>Email</h4>
		<p>
			<%= raw @accomodation.email %>
		</p>
	</div>
	<div>
		<h4>Url</h4>
		<p>
			<%= raw @accomodation.url %>
		</p>
	</div>
	<div>
		<h4>User</h4>
		<p>
			<%= raw @accomodation.user_id %>
		</p>
	</div>
	<% end %>

</div>
<% content_for :side_body do %>
<aside>
	<h2><%= t('.other') %></h2>
	<ul id="accomodations">
		<% @accomodations.each do |accomodation| %>
		<li>
			<%= link_to accomodation.name, refinery.accomodations_accomodation_path(accomodation) %>
		</li>
		<% end %>
	</ul>
</aside>
<% end %>

<%= render '/refinery/content_page' %>
