<% content_for :body_content_title do %>
  <%= @accomodation_type.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @accomodation_type.name %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="accomodation_types">
      <% @accomodation_types.each do |accomodation_type| %>
        <li>
          <%= link_to accomodation_type.name, refinery.accomodations_accomodation_type_path(accomodation_type) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
