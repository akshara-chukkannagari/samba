<%= form_for [refinery, :accomodations_admin, @address] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @address,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :street -%>
    <%= f.text_field :street, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :town -%>
    <%= f.text_field :town -%>
  </div>

  <div class='field'>
    <%= f.label :district -%>
    <%= f.text_field :district -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state -%>
  </div>

  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>

  <div class='field'>
    <%= f.label :lat -%>
    <%= f.text_field :lat -%>
  </div>

  <div class='field'>
    <%= f.label :lng -%>
    <%= f.text_field :lng -%>
  </div>

  <div class='field'>
    <%= f.label :alt -%>
    <%= f.text_field :alt -%>
  </div>

  <div class='field'>
    <%= f.label :accomodation_id -%>
    <%= f.number_field :accomodation_id -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.addresses.admin.addresses.address'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @address.street) -%>
<% end -%>
