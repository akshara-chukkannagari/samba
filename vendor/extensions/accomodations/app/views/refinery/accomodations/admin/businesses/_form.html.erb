<%= form_for [refinery, :accomodations_admin, @business] do |f| -%>
<%= render '/refinery/admin/error_messages',
:object => @business,
:include_object_name => true %>

<div class='field'>
	<%= f.label :name -%>
	<%= f.text_field :name, :class => 'larger widest' -%>
</div>

<div class='field'>
	<%= render '/refinery/admin/wysiwyg',
	:f => f,
	:fields => [:details],
	:object => "accomodations/business" -%>
</div>

<div class='field'>
	<%= f.label :licence -%>
	<%= f.text_field :licence -%>
</div>

<div class='field'>
	<%= f.label :nic -%>
	<%= f.text_field :nic -%>
</div>
<div>
	<%= render "address_attributes",:f => f%>
</div>

<div class='field'>
	<%= f.label :url -%>
	<%= f.text_field :url -%>
</div>

<div class='field'>
	<%= f.label :phone -%>
	<%= f.text_field :phone -%>
</div>

<div class='field'>
	<%= f.label :email -%>
	<%= f.text_field :email -%>
</div>

<%= render '/refinery/admin/form_actions', :f => f,
:continue_editing => false,
:delete_title => t('delete', :scope => 'refinery.businesses.admin.businesses.business'),
:delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @business.name) -%>
<% end -%>

<% content_for :javascripts do -%>
<script>
	$(document).ready(function() {
		page_options.init(false, '', '');
	}); 
</script>
<% end -%>
