<ul>
  <% if ::Refinery::Accomodations::Admin::PricesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.accomodations_admin_prices_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_accomodations_admin_price_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Accomodations::Admin::PricesController.sortable? && ::Refinery::Accomodations::Price.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Prices"),
                 refinery.accomodations_admin_prices_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Prices"),
                 refinery.accomodations_admin_prices_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
