<% content_for :body_content_title do %>
  <%= @business.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @business.name %>
    </p>
  </section>
  <section>
    <h1>Details</h1>
    <p>
      <%=raw @business.details %>
    </p>
  </section>
  <section>
    <h1>Licence</h1>
    <p>
      <%=raw @business.licence %>
    </p>
  </section>
  <section>
    <h1>Nic</h1>
    <p>
      <%=raw @business.nic %>
    </p>
  </section>
  <section>
    <h1>Url</h1>
    <p>
      <%=raw @business.url %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @business.phone %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @business.email %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="businesses">
      <% @businesses.each do |business| %>
        <li>
          <%= link_to business.name, refinery.accomodations_business_path(business) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
