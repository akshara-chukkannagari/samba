
<%= form_for [refinery, :snippets_admin, @snippet] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @snippet,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title,  :value => "current user => #{Refinery::User.all.last.email}", :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :date -%>
    <%= f.datetime_select :date -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "snippets/snippet" -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.snippets.admin.snippets.snippet'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @snippet.title) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
