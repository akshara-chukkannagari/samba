
<% content_for :body_content_title do %>
  <%= @snippet.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @snippet.title %>
    </p>
  </section>
  <section>
    <h1>Date</h1>
    <p>
      <%=raw @snippet.date %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @snippet.description %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @snippet.link %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="snippets">
      <% @snippets.each do |snippet| %>
        <li>
          <%= link_to snippet.title, refinery.snippets_snippet_path(snippet) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
