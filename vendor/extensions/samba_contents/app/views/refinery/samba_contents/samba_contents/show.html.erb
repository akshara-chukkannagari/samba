<% content_for :body_content_title do %>
  <%= @samba_content.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @samba_content.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @samba_content.description %>
    </p>
  </section>
  <section>
    <h1>User</h1>
    <p>
      <%=raw @samba_content.user_id %>
    </p>
  </section>
  <div>
  	<%@samba_content.images.each do |image|%>
  	  <p>
  	  	<%= image.inspect%>
  	  </p>
  	<%end%>
  </div>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="samba_contents">
      <% @samba_contents.each do |samba_content| %>
        <li>
          <%= link_to samba_content.title, refinery.samba_contents_samba_content_path(samba_content) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
