<div class="container">

	<div class="row">
		<div class="span6">
			<h2> 
			<span class="label label-success">
				<%= @samba_content.title %> 
			</span>
			</h2>
		</div>

	</div>

	<div class="row">

		<div class="col-9 col-sm-9 col-lg-9">

			<p>
				<%= raw @samba_content.description %>
			</p>
		</div>
		<div class="col-3 col-sm-3 col-lg-3 samba_content">
			<%@samba_content.images.each do |image|%>

			<%= image_tag("/system/refinery/images/#{image.image_uid}")%>

			<%end%>
		</div>
	</div>

</div>

<%= raw @samba_content.user_id %>