<ul>
  <% if ::Refinery::SambaContents::Admin::SambaContentsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.samba_contents_admin_samba_contents_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_samba_contents_admin_samba_content_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::SambaContents::Admin::SambaContentsController.sortable? && ::Refinery::SambaContents::SambaContent.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Samba Contents"),
                 refinery.samba_contents_admin_samba_contents_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Samba Contents"),
                 refinery.samba_contents_admin_samba_contents_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
