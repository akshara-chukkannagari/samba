<%= form_for [refinery, :regions_admin, @region] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @region,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "regions/region" -%>
  </div>

  <div class='field'>
    <%= f.label :url -%>
    <%= f.text_field :url -%>
  </div>

  <div class='field'>
    <%= f.label :user_id -%>
    <%= f.number_field :user_id -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.regions.admin.regions.region'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @region.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
